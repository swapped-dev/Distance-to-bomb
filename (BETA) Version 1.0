		set_task( 1.75 , "ShowHUD", "id );
	}
}

public ShowHUD( id )
{
	if( !has_user_weapon( id, CSW_C4 ) || IsPlanted )
	{
		remove_task( id );
	}

	else
	{
		
	}
}

public bomb_planted( id )
{
	IsPlanted = true;
}
